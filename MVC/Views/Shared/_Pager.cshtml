@model rita.Information.PaginationInfo
@{
    int lastpage = Model.Total / Model.Size;
    if (Model.Total % Model.Size != 0) { lastpage += 1; }
    int prevpage = (Model.Index - 1 < 1) ? Model.Index : (Model.Index - 1);
    int nextpage = (Model.Index + 1) > lastpage ? lastpage : (Model.Index + 1);
}
<button type="submit" onclick="$('#paginationtotal').val('0');">第一頁</button>
<button type="submit" onclick="$('#pagination').val('@prevpage');">上一頁</button>
